{
  "[css]": {
    "editor": {
      "defaultFormatter": "MikeBovenlander.formate"
    }
  },
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cmake": {
    "configureOnOpen": false
  },
  "dev": {
    "containers": {
      "containerEnv": {
        "HOME": "home/node"
      },
      "runArgs": [
        "--userns=keep-id"
      ]
    }
  },
  "docker": {
    "composeCommand": "podman-compose",
    "dockerPath": "/nix/store/8cwdz6lf63qk0aryxfv0zc9vbm54g2a8-podman-4.7.2/bin/podman",
    "environment": {
      "DOCKER_HOST": "unix:///run/user/1000/podman/podman.sock"
    }
  },
  "editor": {
    "bracketPairColorization": {
      "enabled": true,
      "independentColorPoolPerBracketType": true
    },
    "codeActionsOnSave": {
      "source": {
        "organizeImports": true
      }
    },
    "cursorBlinking": "smooth",
    "cursorSmoothCaretAnimation": "on",
    "cursorStyle": "line",
    "cursorWidth": 2,
    "fontFamily": "'SauceCodePro Nerd Font Propo Regular Italic', 'Droid Sans Mono','JetbrainsMono Nerd Font'",
    "fontLigatures": true,
    "formatOnPaste": true,
    "formatOnSave": true,
    "formatOnSaveMode": "modificationsIfAvailable",
    "formatOnType": false,
    "guides": {
      "bracketPairs": true,
      "indentation": true
    },
    "inlineSuggest": {
      "enabled": true
    },
    "largeFileOptimizations": true,
    "lineHeight": 1.4,
    "lineNumbers": "on",
    "minimap": {
      "autohide": true,
      "maxColumn": 80,
      "renderCharecters": false
    },
    "quickSuggestionsdelay": 1,
    "renderWhitespace": "trailing",
    "roundedSelection": true,
    "scrollbar": {
      "horizontal": "auto",
      "vertical": "auto"
    },
    "smoothScrolling": true,
    "tabsize": 2
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "Fira Code Retina",
  "editor.fontSize": 21,
  "explorer": {
    "confirmDelete": true,
    "confirmDragAndDrop": false,
    "incrementalNaming": "smart",
    "sortOrder": "default",
    "sortOrderLexicographicOptions": "default"
  },
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "files": {
    "autoSave": "afterDelay",
    "eol": "\n",
    "exclude": {
      "**/*.olean": true,
      "**/.DS_Store": true,
      "**/.classpath": true,
      "**/.direnv": true,
      "**/.factorypath": true,
      "**/.git": true,
      "**/.hg": true,
      "**/.project": true,
      "**/.settings": true,
      "**/.svn": true,
      "**/CVS": true,
      "**/Thumbs.db": true
    },
    "insertFinalNewline": true,
    "trimTrailingWhitespace": true
  },
  "files.enableTrash": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git": {
    "autofetch": true,
    "confirmSync": false,
    "enableSmartCommit": true
  },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "jupyter": {
    "alwaysTrustNotebooks": true
  },
  "latex-workshop": {
    "view": {
      "pdf": {
        "viewer": "tab"
      }
    }
  },
  "lldb.suppressUpdateNotifications": true,
  "markdown": {
    "extension": {
      "print": {
        "theme": "dark"
      }
    },
    "preview": {
      "typographer": true
    }
  },
  "markdownlint.config": {
    "MD024": {
      "siblings_only": true
    },
    "MD028": false,
    "MD040": false,
    "MD041": false
  },
  "nix": {
    "enableLanguageServer": true,
    "serverPath": "/nix/store/id7c0a8ximrcm9p8gxcc0yqsgkmjawg2-nil-2023-08-09/bin/nil",
    "serverSettings": {
      "nil": {
        "diagnostics": {
          "ignored": [
            "unused_binding",
            "unused_with"
          ]
        },
        "formatting": {
          "command": [
            "/nix/store/g7iw89kgcf1y1cy6ilwhbn38l91mm95a-nixpkgs-fmt-1.3.0/bin/nixpkgs-fmt"
          ]
        }
      }
    }
  },
  "ocamlformat-vscode-extension": {
    "customOcamlformatPath": "ocamlformat",
    "ocamlformatOption": "--enable-outside-detected-project,--break-cases = fit-or-vertical,--cases-exp-indent=4,--if-then-else=k-r,--type-decl-indent=4"
  },
  "python": {
    "formatting": {
      "provider": "black"
    }
  },
  "rust-client": {
    "rustupPath": "/nix/store/v2wwnf8w9pkl1vcr37iv60fh8pz0z198-rustup-1.26.0/bin/rustup"
  },
  "search": {
    "searchEditor": {
      "doubleClickBehaviour": "goToLocation"
    },
    "smartCase": true,
    "sortOrder": "default"
  },
  "security.workspace.trust.enabled": false,
  "terminal": {
    "integrated": {
      "copyOnSelection": true,
      "cursorBlinking": true,
      "cursorStyle": "line",
      "cursorWidth": 2,
      "fontFamily": "'UbuntuMono Nerd Font Mono Regular', 'monospace'",
      "fontSize": 16,
      "scrollback": 5000,
      "shell": {
        "linux": "/nix/store/q1c2flcykgr4wwg5a6h450hxbk4ch589-bash-5.2-p15/bin/bash"
      },
      "smoothScrolling": true
    }
  },
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono', 'JetBrainsMono Nerd Font Mono SemiBold'",
  "terminal.integrated.fontSize": 17,
  "update": {
    "mode": "none"
  },
  "update.mode": "none",
  "update.showReleaseNotes": false,
  "window": {
    "menuBarVisibility": "toggle",
    "nativeTabs": true,
    "title": "${rootName}${separator}${profileName}${separator}${activeEditorShort}",
    "titleBarStyle": "custom",
    "zoomLevel": 0
  },
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "custom",
  "workbench": {
    "colorTheme": "RedCrafter07 Theme",
    "iconTheme": "vscode-icons",
    "list": {
      "smoothScrolling": true
    },
    "productIconTheme": "bootstrap-product-icons",
    "settings": {
      "editor": "ui"
    },
    "smoothScrolling": true,
    "tree": {
      "indent": 4
    }
  },
  "workbench.enableExperiments": true,
  "workbench.settings.enableNaturalLanguageSearch": true
}
