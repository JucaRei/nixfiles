{
  "[lua]": {
    "editor.defaultFormatter": "yinfei.luahelper"
  },
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.organizeLinkDefinitions": true,
    "source.fixAll.markdownlint": true,
  },
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.cursorSurroundingLines": 2,
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.cursorWidth": 2,
  "editor.codeLens": true,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.hideUnchangedRegions.revealLineCount": 20,
  "diffEditor.diffAlgorithm": "advanced",
  "editor.find.autoFindInSelection": "multiline",
  "editor.fontFamily": "'JetbrainsMono Nerd Font SemiBold Italic', 'SauceCodePro Nerd Font Propo Regular Italic', 'Droid Sans Mono'",
  "editor.fontLigatures": true,
  "editor.fontSize": 18.2,
  "editor.fontVariations": true,
  "editor.fontWeight": 500,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.inlineSuggest.enabled": true,
  "editor.largeFileOptimizations": true,
  "editor.lineHeight": 1.6,
  "editor.lineNumbers": "on",
  "editor.minimap.autohide": true,
  "editor.minimap.maxColumn": 120,
  "editor.unicodeHighlight.includeComments": false,
  "editor.renderControlCharacters": true,
  "editor.minimap.renderCharacters": false,
  "editor.quickSuggestionsDelay": 2,
  "editor.renderWhitespace": "trailing",
  "editor.roundedSelection": true,
  "editor.rulers": [
    90,
    130
  ],
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.vertical": "auto",
  "search.followSymlinks": true,
  "search.searchEditor.doubleClickBehaviour": "goToLocation",
  "search.smartCase": true,
  "search.sortOrder": "default",
  "editor.smoothScrolling": true,
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 130,
  "editor.wrappingIndent": "indent",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.incrementalNaming": "smart",
  "explorer.sortOrder": "default",
  "explorer.sortOrderLexicographicOptions": "default",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "files.autoGuessEncoding": true,
  "files.autoSave": "afterDelay",
  "files.enableTrash": false,
  "files.eol": "\n",
  "files.exclude": {
    "**/*.exe": true,
    "**/*.o": true,
    "**/*.olean": true,
    "**/.DS_Store": true,
    "**/.classpath": true,
    "**/.direnv": true,
    "**/.factorypath": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.allowForcePush": true,
  "git.autofetch": true,
  "git.confirmSync": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "markdown-preview-enhanced.enablePreviewZenMode": true,
  "markdown-preview-enhanced.codeBlockTheme": "auto.css",
  "markdown-preview-enhanced.alwaysShowBacklinksInPreview": true,
  "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,
  "markdown.preview.typographer": true,
  "markdownlint.config": {
    "MD024": {
      "siblings_only": true
    },
    "MD028": false,
    "MD040": false,
    "MD041": false
  },
  "nix.enableLanguageServer": true,
  "nix.formatterPath": "nixpkgs-fmt",
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nil": {
      "diagnostics": {
        "ignored": [
          "unused_binding",
          "unused_with"
        ]
      },
      "formatting": {
        "command": [
          "nixpkgs-fmt"
        ]
      }
    }
  },
  "security.promptForLocalFileProtocolHandling": false,
  "security.workspace.trust.enabled": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 1.8,
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono Ret', 'monospace'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.mouseWheelScrollSensitivity": 2,
  "terminal.integrated.persistentSessionScrollback": 200,
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "both",
  "terminal.integrated.shellIntegration.history": 1000,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.tabs.focusMode": "singleClick",
  "update.mode": "none",
  "update.showReleaseNotes": true,
  "window.commandCenter": false,
  "window.density.editorTabHeight": "compact",
  "window.menuBarVisibility": "toggle",
  "window.title": "${rootName}${separator}${profileName}${separator}${activeEditorShort}",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0.15,
  "workbench.colorTheme": "RedCrafter07 Theme",
  "workbench.editor.labelFormat": "short",
  "workbench.enableExperiments": true,
  "workbench.iconTheme": "bearded-icons",
  "workbench.list.smoothScrolling": true,
  "workbench.productIconTheme": "macos-modern",
  "workbench.settings.editor": "ui",
  "workbench.settings.enableNaturalLanguageSearch": true,
  "editor.scrollbar.horizontalScrollbarSize": 10,
  "workbench.tree.indent": 6,
  "search.collapseResults": "auto",
  "zenMode.hideLineNumbers": false
}
